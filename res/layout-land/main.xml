<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#CC7f7f7f">
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
         android:background="@drawable/custom_top" >

        <EditText
            android:id="@+id/myeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="60dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/custom_editbox"
            android:hint="Add a phrase " />
       
        <ImageButton
            android:id="@+id/cleartext"
            android:onClick="onClick"
            android:clickable="true"
            
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_marginRight="7dp"
            android:src="@drawable/clear2" 
            android:background="@drawable/custom_button1"/>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@drawable/custom_middle" >

   <ImageButton
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.65"
            android:text="Add note"
            android:textColor="#FFFFFF"
            android:onClick="onClick"
             android:textStyle="bold"
             android:layout_marginLeft="7dp"
          android:textSize="15sp"
               android:background="@drawable/custom_button1"
            android:src="@drawable/add1"
           />

 <Button
     android:id="@+id/speak"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:layout_marginLeft="7dp"
     android:layout_marginRight="7dp"
     android:background="@drawable/custom_button1_speak"
     android:onClick="onClick"
     android:src="@drawable/app_icon_new"
     android:text="Speak"
     android:textColor="#FFFFFF"
     android:textSize="25sp"
     />

 <ImageButton
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_weight="1.65"
             android:textSize="15sp"
             android:textStyle="bold"
              android:textColor="#FFFFFF"
            android:onClick="onClick"
            
            android:layout_marginRight="7dp" 
            android:text="Clear list" 
            android:background="@drawable/custom_button1"
            android:src="@drawable/trash"
            />
        
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="#0080FF"
        android:cacheColorHint="#00000000"
        android:layout_weight="1"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:paddingBottom="3dp"/>

>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/custom_bottom"
        android:gravity="bottom"
         android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:paddingTop="2dp">
 
        <ImageButton
            android:id="@+id/Opentext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:onClick="onClick"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
             android:textColor="#FFFFFF"
             android:textStyle="bold"
            android:src="@drawable/folder"
            android:background="@drawable/custom_button1"
            android:text="Open file" />
        
        <ImageButton
            android:id="@+id/savefile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:onClick="onClick"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
             android:textColor="#FFFFFF"
             android:textStyle="bold"
            android:src="@drawable/save"
            android:background="@drawable/custom_button1"
            android:text="SaveFile" />
        

        <ImageButton
            android:id="@+id/settingsTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:onClick="onClick"
            android:src="@drawable/tools"
             android:layout_marginTop="3dp"
              android:textColor="#FFFFFF"
             android:layout_marginLeft="7dp"
              android:textStyle="bold"
            android:background="@drawable/custom_button1"
            android:text="Settings" />

        <ImageButton
            android:id="@+id/shareVia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
           android:layout_marginLeft="7dp"
           android:layout_marginTop="3dp"
             android:src="@drawable/users"
            android:onClick="onClick"
             
             android:textColor="#FFFFFF"
            android:background="@drawable/custom_button1"
            android:text="Share"  />
        
        <ImageButton
            android:id="@+id/pause"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:src="@drawable/pause8"
            android:onClick="onClick"
            
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/custom_button1"
            android:layout_weight="0.10"/>
            
    </LinearLayout>

</LinearLayout>